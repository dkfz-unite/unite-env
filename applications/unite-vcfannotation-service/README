# Use the following build command to load the container with the appropriate SSH key. 
docker build -t ensemblorg/ensembl-vep --build-arg SSH_KEY="$(cat /home/right/.ssh/2020-03-10_ODCF)" .

# Run the container with the following...
# ODCF_REMOTE_DIR is mandatory, and must be called by the system when starting the container. 
# ODCF_FILE_EXTENSION is mandatory. Currently only "vcf" is recognized. 
# OTP_MONGOHOST is the IP of the currently running MongoDB docker container. Because this can change, it is called at runtime. 

docker run -t -i \
-e ODCF_REMOTE_DIR="/icgc/dkfzlsdf/project/hipo/hipo_057/sequencing" \
-e ODCF_FILE_EXTENSION="vcf" \
-e OTP_MONGOHOST="172.25.0.3" \
-e  OTP_LOGLEVEL=10 \
-e OTP_FEEDER_URL=http://192.168.23.134:5000 \
-v /home/vep/.vep:/opt/vep/.vep \
-v /home/right/WindowsDocuments/eclipse-workspace/UNITEotp/src/UNITEotp/:/usr/lib/python3/dist-packages/UNITEotp \
-v /home/right/WindowsDocuments/eclipse-workspace/UNITEmsc/src/UNITEmsc/:/usr/lib/python3/dist-packages/UNITEmsc \
-v /home/right/WindowsDocuments/eclipse-workspace/PyVCF/vcf/:/usr/lib/python3/dist-packages/vcf \
--network="unite" \
--device /dev/fuse \
--cap-add SYS_ADMIN \
--security-opt apparmor:unconfined \
ensemblorg/ensembl-vep \
/usr/lib/python3/dist-packages/UNITEotp/ODCFFileCrawl.py



and keep the same naming convention as i have in yml files
